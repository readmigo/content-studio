# Content Studio Environment Configuration
# Copy this file to .env.local, .env.debug, .env.staging, or .env.production

# Default environment (local | debug | staging | production)
NEXT_PUBLIC_DEFAULT_ENV=local

# API Endpoints for each environment
NEXT_PUBLIC_API_URL_LOCAL=http://localhost:3000
NEXT_PUBLIC_API_URL_DEBUG=https://debug.api.readmigo.com
NEXT_PUBLIC_API_URL_STAGING=https://staging.api.readmigo.com
NEXT_PUBLIC_API_URL_PRODUCTION=https://api.readmigo.com

# Authentication (shared with main backend)
NEXTAUTH_SECRET=your-secret-here
NEXTAUTH_URL=http://localhost:3001
